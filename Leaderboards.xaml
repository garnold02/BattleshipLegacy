<Window x:Class="BattleshipClient.Leaderboards"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BattleshipClient"
        mc:Ignorable="d"
        Title="Leaderboards" Height="450" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="6*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>

        <Label Content="Rangsor" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="24" FontWeight="Bold"/>
        <ListBox Name="LbxLeaderboards" Grid.Row="1" Margin="10 10 10 5"/>
        <Button Name="BtnClose" Grid.Row="2" Content="Bezárás" Margin="10 5 10 10"/>
    </Grid>
</Window>
